<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/lightest_grey"
tools:context=".activities.main.user.ui.add.AddDeviceActivity">

<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/code_no_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_rounded_bottom"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <TextView
        android:id="@+id/code_tp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="Device Code"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/connect_img"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:adjustViewBounds="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/code_tp"
        app:lottie_autoPlay="true"
        app:lottie_rawRes="@raw/device_otp"
        app:lottie_loop="false"/>



    <TextView
        android:id="@+id/enter_tp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Enter code linked to device"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/connect_img" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/enter_tp">

        <TextView
            android:id="@+id/first_no"
            style="@style/AddDeviceCode"
            android:layout_marginEnd="5dp" />

        <TextView
            android:id="@+id/second_no"
            style="@style/AddDeviceCode"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp" />

        <TextView
            android:id="@+id/third_no"
            style="@style/AddDeviceCode"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp" />

        <TextView
            android:id="@+id/fourth_no"
            style="@style/AddDeviceCode"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp" />

        <TextView
            android:id="@+id/fifth_no"
            style="@style/AddDeviceCode"
            android:layout_marginStart="5dp"/>



    </LinearLayout>

    <Button
        android:id="@+id/sendReq"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:text="Send Request"
        android:background="@drawable/rouneded_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"/>




</androidx.constraintlayout.widget.ConstraintLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:orientation="vertical"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/code_no_container">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/no1"
            style="@style/AddDeviceNumber"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="12dp"
            android:text="1" />

        <TextView
            android:id="@+id/no2"
            style="@style/AddDeviceNumber"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:text="2" />

        <TextView
            android:id="@+id/no3"
            style="@style/AddDeviceNumber"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="24dp"
            android:text="3" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/no4"
            style="@style/AddDeviceNumber"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="12dp"
            android:text="4" />

        <TextView
            android:id="@+id/no5"
            style="@style/AddDeviceNumber"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:text="5" />

        <TextView
            android:id="@+id/no6"
            style="@style/AddDeviceNumber"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="24dp"
            android:text="6" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/no7"
            style="@style/AddDeviceNumber"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="12dp"
            android:text="7" />

        <TextView
            android:id="@+id/no8"
            style="@style/AddDeviceNumber"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:text="8" />

        <TextView
            android:id="@+id/no9"
            style="@style/AddDeviceNumber"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="24dp"
            android:text="9" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="12dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/no0"
            style="@style/AddDeviceNumber"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:text="0" />

        <ImageView
            android:id="@+id/delete"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="24dp"
            android:layout_weight="1"
            android:src="@drawable/ic_baseline_backspace_24"
            app:tint="@color/app_blue" />
    </LinearLayout>

</LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>